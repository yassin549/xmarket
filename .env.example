# ============================================================================
# DATABASE - Neon PostgreSQL
# ============================================================================
NEON_DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# ============================================================================
# CACHE & KV STORE - Upstash Redis
# ============================================================================
UPSTASH_REST_URL=https://your-redis.upstash.io
UPSTASH_REST_TOKEN=your_upstash_token_here

# ============================================================================
# VECTOR DATABASE - Pinecone
# ============================================================================
PINECONE_API_KEY=pcsk_your_pinecone_api_key_here
PINECONE_INDEX_HOST=https://your-index.svc.pinecone.io
VECTOR_DB_API_KEY=pcsk_your_pinecone_api_key_here
VECTOR_DB_URL=https://your-index.svc.pinecone.io
VECTOR_DB_PROVIDER=pinecone

# ============================================================================
# OBJECT STORAGE - Vercel Blob
# ============================================================================
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here

# ============================================================================
# REALTIME - Ably
# ============================================================================
ABLY_API_KEY=your_ably_api_key_here
REALTIME_PROVIDER_KEY=your_ably_api_key_here
REALTIME_PROVIDER=ably

# ============================================================================
# LLM - Hugging Face
# ============================================================================
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models/
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODE=enabled

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=development
SANDBOX_MODE=true
DB_POOL_SIZE=10
DB_POOL_IDLE_TIMEOUT=60000
DB_POOL_CONNECTION_TIMEOUT=5000
LOG_LEVEL=debug
API_TIMEOUT=30000
VERBOSE_ERRORS=true

HMAC_SECRET_DEFAULT=your_hmac_secret_v0_64_hex_chars
HMAC_SECRET_V1=your_hmac_secret_v1_64_hex_chars
