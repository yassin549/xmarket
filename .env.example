# Environment variables - NEVER commit this file!
# Copy this to .env and fill in your actual values.

# ============================================================================
# Required Variables
# ============================================================================

# PostgreSQL connection URL
# Example: postgresql://user:password@localhost:5432/everything_market
DATABASE_URL=postgresql://user:password@localhost:5432/everything_market

# Redis connection URL
# Example: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# HMAC secret for reality-engine authentication (generate with: openssl rand -hex 32)
REALITY_API_SECRET=your-secret-key-here

# Admin API key for protected endpoints (generate with: openssl rand -hex 32)
ADMIN_API_KEY=your-admin-key-here

# ============================================================================
# Optional Variables (defaults shown)
# ============================================================================

# Polling interval for reality-engine in seconds (default: 300)
POLL_INTERVAL=300

# LLM mode: tinyLLama, skipped, or disabled (default: tinyLLama)
LLM_MODE=tinyLLama

# LLM rate limit calls per hour (default: 10)
LLM_CALLS_PER_HOUR=10
LLM_DEVICE=cpu
# LLM_MODEL_PATH=/path/to/local/model
