# Database
DATABASE_URL=sqlite:///./everything_market.db

# Security Secrets (CHANGE THESE IN PRODUCTION!)
REALITY_API_SECRET=dev-reality-secret-change-in-production
ADMIN_API_KEY=dev-admin-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# Service URLs
BACKEND_URL=http://localhost:8000
ORDERBOOK_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3000

# Reality Engine
POLL_INTERVAL=300
LLM_MODE=heuristic
LLM_CALLS_PER_HOUR=10
ENABLE_LLM=true
ENABLE_PLAYWRIGHT=false
ENABLE_METRICS=true

# Server
PORT=8000
HOST=0.0.0.0
DEBUG=true
ENVIRONMENT=development
WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
